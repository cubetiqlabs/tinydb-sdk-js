{
  "name": "@tinydb/client",
  "version": "0.1.0",
  "description": "Official TinyDB TypeScript client SDK",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "test": "vitest run",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "tinydb",
    "database",
    "sdk",
    "client",
    "typescript"
  ],
  "author": "TinyDB Contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.2"
  }
}
